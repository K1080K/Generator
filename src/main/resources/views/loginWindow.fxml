<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="magus.controllers.LoginController">
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <TextField fx:id="tb_Username" promptText="Username" />
                        <Region prefHeight="45.0" prefWidth="200.0" />
                        <TextField fx:id="tb_Password" layoutX="10.0" layoutY="10.0" promptText="Password" />
                    </children>
                </VBox>
                <VBox alignment="CENTER">
                    <children>
                        <Button fx:id="bt_Login" mnemonicParsing="false" onAction="#bt_LoginPressed" text="Login" />
                        <Region prefHeight="44.0" prefWidth="200.0" />
                        <Button fx:id="bt_Register" mnemonicParsing="false" onAction="#bt_RegisterPressed" text="Register" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
